<script>
  $("#home").addClass("active");
  
  $(document).ready(function() {
    $('#iterations-field').hide();

    $('#method-select').change(function() {
      var selection = $(this).val();
      if (selection == '2') {
        $('#iterations-field').show();
      }
      else {
        $('#iterations-field').hide();
      }
    });
  });
</script>

<div class="page-header">
  <h2> Compresión de imágenes </h2>
</div>

<div class="row">
  <div class="col-md-3">
    <%= form_tag('/import', method: 'post', multipart: 'true') do %>
      <div class="form-group" id="file-group">
        <%= label_tag :file, "Imagen" %>
        <%= file_field_tag :file %>
        <p class="help-block">Selecciona una imagen en formato PNG.<p>
      </div>

      <div class="form-group">
        <%= label_tag :method, "Método de cuantificación" %>
        <%= select_tag :method, options_for_select(@metodos), prompt: 'Selecciona un método', class: 'form-control', id: 'method-select'%>
      </div>

      <div class="form-group">
        <%= label_tag :dithering, "Método de tramado" %>
        <%= select_tag :dithering, options_for_select(@dithering), prompt: 'Sin tramado', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= label_tag :colors, "Número de colores" %>
        <%= text_field_tag :colors, nil, class: 'form-control', autocomplete: :off %>
      </div>

      <div class="form-group" id="iterations-field">
        <%= label_tag :iterations, "Número de iteraciones" %>
        <%= text_field_tag :iterations, nil, class: 'form-control', autocomplete: :off %>
      </div>
      <%= submit_tag "Importar", class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
